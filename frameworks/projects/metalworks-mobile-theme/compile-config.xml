<flex-config>

	<compiler>
		<accessible>true</accessible>
		
		<external-library-path>
			<path-element>${env.PLAYERGLOBAL_HOME}/${playerglobal.version}/playerglobal.swc</path-element>
			<path-element>../../libs/feathers.swc</path-element>
			<path-element>../../libs/starling.swc</path-element>
			<path-element>../../libs/framework.swc</path-element>
		</external-library-path>
		
		<locale/>
						
		<source-path>
			<path-element>../feathers/feathers/themes/MetalWorksMobileTheme/source</path-element>
		</source-path>
		
		<warn-no-constructor>false</warn-no-constructor>

		<!-- for some reason, the font won't get embedded without this -->
		<fonts> 
			<managers>  
				<manager-class>flash.fonts.CFFFontManager</manager-class> 
			</managers> 
		</fonts>
	</compiler>
	
	<include-sources>
		<path-element>../feathers/feathers/themes/MetalWorksMobileTheme/source</path-element>
	</include-sources>
</flex-config>
