<project name="metalworks-desktop-theme" default="main" basedir=".">
	<property name="FLEX_HOME" location="${basedir}/../../.."/>

	<property file="${FLEX_HOME}/env.properties"/>
	<property environment="env"/>
	<property file="${FLEX_HOME}/build.properties"/>

	<target name="main" depends="clean,compile" description="Clean build of MetalWorksDesktopTheme.swc"/>

	<target name="clean">
		<delete failonerror="false">
			<fileset dir="${FLEX_HOME}/frameworks/themes/MetalWorksDesktopTheme">
				<include name="MetalWorksDesktopTheme.swc"/>
				<include name="MetalWorksDesktopTheme.swc.incr"/>
			</fileset>
		</delete>
	</target>

	<target name="compile" description="Compiles MetalWorksDesktopTheme.swc">
		<echo message="Compiling frameworks/themes/MetalWorksDesktopTheme/MetalWorksDesktopTheme.swc"/>
		<!-- Load the <compc> task. We can't do this at the <project> level -->
		<!-- because targets that run before flexTasks.jar gets built would fail. -->
		<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar;${FLEX_HOME}/lib/flexTasks.jar"/>
		
		<java jar="${FLEX_HOME}/lib/compc.jar" fork="true">
			<jvmarg line="${compc.jvm.args}"/>
			<arg value="+flexlib"/>
			<arg value="${FLEX_HOME}/frameworks"/>
			<arg value="-load-config"/>
			<arg value="compile-config.xml" />
			<arg value="-output" />
			<arg value="${FLEX_HOME}/frameworks/themes/MetalWorksDesktopTheme/MetalWorksDesktopTheme.swc"/>
			<arg value="+playerglobal.version=${playerglobal.version}" />
			<arg value="+env.PLAYERGLOBAL_HOME=${env.PLAYERGLOBAL_HOME}" />
		</java>
		<!--<compc fork="true"
			   output="${FLEX_HOME}/frameworks/themes/MetalWorksDesktopTheme/MetalWorksDesktopTheme.swc">
			<jvmarg line="${compc.jvm.args}"/>
			<load-config filename="compile-config.xml" />
			<arg value="+playerglobal.version=${playerglobal.version}" />
			<arg value="+env.PLAYERGLOBAL_HOME=${env.PLAYERGLOBAL_HOME}" />
		</compc>-->
	</target>

</project>
