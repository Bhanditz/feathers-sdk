<project name="minimal-mobile-theme" default="main" basedir=".">
	<property name="FLEX_HOME" location="${basedir}/../../.."/>

	<property file="${FLEX_HOME}/env.properties"/>
	<property environment="env"/>
	<property file="${FLEX_HOME}/build.properties"/>

	<target name="main" depends="clean,compile,copy-assets" description="Clean build of MinimalMobileTheme.swc"/>

	<target name="clean">
		<delete failonerror="false">
			<fileset dir="${FLEX_HOME}/frameworks/themes/MinimalMobileTheme">
				<include name="MinimalMobileTheme.swc"/>
				<include name="MinimalMobileTheme.swc.incr"/>
			</fileset>
		</delete>
	</target>

	<target name="compile" description="Compiles MinimalMobileTheme.swc">
		<echo message="Compiling frameworks/themes/MinimalMobileTheme/MinimalMobileTheme.swc"/>
		<!-- Load the <compc> task. We can't do this at the <project> level -->
		<!-- because targets that run before flexTasks.jar gets built would fail. -->
		<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar;${FLEX_HOME}/lib/flexTasks.jar"/>
		
		<compc fork="true"
			   output="${FLEX_HOME}/frameworks/themes/MinimalMobileTheme/MinimalMobileTheme.swc">
			<jvmarg line="${compc.jvm.args}"/>
			<load-config filename="compile-config.xml" />
			<arg value="+playerglobal.version=${playerglobal.version}" />
			<arg value="+env.PLAYERGLOBAL_HOME=${env.PLAYERGLOBAL_HOME}" />
		</compc>
	</target>

	<target name="copy-assets">
		<mkdir dir="${FLEX_HOME}/frameworks/themes/MinimalMobileTheme/fonts"/>
		<mkdir dir="${FLEX_HOME}/frameworks/themes/MinimalMobileTheme/images"/>
		<copy todir="${FLEX_HOME}/frameworks/themes/MinimalMobileTheme">
			<fileset dir="${basedir}/../feathers/feathers/themes/MinimalMobileTheme/assets">
				<include name="fonts/pf_ronda_seven.fnt"/>
				<include name="images/minimal_mobile.png"/>
				<include name="images/minimal_mobile.xml"/>
			</fileset>
		</copy>
	</target>

</project>
